{
  "name": "cashback-calculator",
  "version": "1.0.0",
  "description": "Интерактивный калькулятор кешбека с пошаговым квизом для расчета экономии с банковскими кешбек-программами",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "preview": "cd frontend && npm run preview",
    "clean": "rimraf frontend/dist frontend/.astro backend/dist",
    "lint": "npm run lint:frontend",
    "lint:frontend": "cd frontend && npm run astro check",
    "install:all": "npm install && npm run install:frontend && npm run install:backend",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "start": "npm run build && npm run preview",
    "test": "echo \"No tests specified yet\"",
    "prepare": "npm run install:all"
  },
  "keywords": [
    "cashback",
    "calculator",
    "banking",
    "finance",
    "savings",
    "quiz",
    "interactive",
    "svelte",
    "astro",
    "typescript",
    "веб-приложение",
    "кешбек",
    "калькулятор",
    "экономия"
  ],
  "author": {
    "name": "Cashback Calculator Team",
    "email": "contact@cashback-calculator.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/username/cashback-calculator.git"
  },
  "bugs": {
    "url": "https://github.com/username/cashback-calculator/issues"
  },
  "homepage": "https://github.com/username/cashback-calculator#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.10"
  },
  "config": {
    "frontend_port": "4321",
    "backend_port": "3000"
  },
  "directories": {
    "doc": "docs"
  }
}
